<idea-plugin version="2">
    <id>siani.dev.itrules</id>
    <name>Itrules</name>
    <version>#version#</version>
    <vendor email="support.itrules@siani.es" url="http://www.siani.es">Itrules: Intelligent Template Engine Rules Based
    </vendor>

    <description><![CDATA[
       Itrules is a rule-based template engine. Itrules can generate HTML, XML, SQL, JSON or any other documents from templates.
       These templates are a compound of rules that are activated basing on a set of conditions that the users define. The rules have marks that can trigger other rules that define what and how the text will be rendered in this point.
       Example:

       def type(Person)
          $Name was born in $Country on $Birthday+ShortDate
       end

    ]]></description>

    <change-notes><![CDATA[
      #change-notes#
    ]]>
    </change-notes>

    <idea-version since-build="131"/>

    <depends>org.jetbrains.idea.maven</depends>

    <actions>
        <action id="NewItrFile" class="io.intino.itrules.intellij.actions.CreateItrFileAction">
            <add-to-group group-id="NewGroup" anchor="after" relative-to-action="NewFile"/>
        </action>

        <group id="ItrulesMenu" text="Itrules" description="Itrules Menu">
            <action id="itrules.toClass" class="io.intino.itrules.intellij.actions.java.TemplateGeneration"
                    text="Generate Java Template"
                    description="Generates the corresponding Java representation of the template">
                <keyboard-shortcut keymap="$default" first-keystroke="control shift G"/>
                <add-to-group group-id="EditorPopupMenu" anchor="last"/>
                <add-to-group group-id="ToolsMenu" anchor="last"/>
            </action>
        </group>

    </actions>

    <extensions defaultExtensionNs="com.intellij">
        <fileDocumentManagerListener
                implementation="io.intino.itrules.intellij.actions.ItrFileDocumentManagerListener"/>
        <applicationService serviceInterface="io.intino.itrules.intellij.sdk.ItrulesSdkManager"
                            serviceImplementation="io.intino.itrules.intellij.sdk.impl.ItrulesSdkManagerImpl"/>
        <facetType implementation="io.intino.itrules.intellij.facet.ItrulesFacetType"/>
        <framework.type implementation="io.intino.itrules.intellij.framework.ItrulesFrameworkType"/>
        <fileTypeFactory implementation="io.intino.itrules.intellij.lang.file.ItrulesFileTypeFactory"/>
        <lang.parserDefinition language="Itrules" implementationClass="io.intino.itrules.intellij.lang.parser.ItrulesParserDefinition"/>
        <lang.syntaxHighlighterFactory language="Itrules"
                                       implementationClass="io.intino.itrules.intellij.highlighting.ItrulesSyntaxHighlighterFactory"/>
        <lang.braceMatcher language="Itrules"
                           implementationClass="io.intino.itrules.intellij.highlighting.ItrulesBraceMatcher"/>
        <treeStructureProvider implementation="io.intino.itrules.intellij.project.view.ItrulesTreeStructureProvider"/>
    </extensions>

    <application-components>
        <component>
            <implementation-class>io.intino.itrules.intellij.project.FileListener</implementation-class>
        </component>
    </application-components>
    <project-components/>

</idea-plugin>