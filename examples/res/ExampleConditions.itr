rule type(Person)
    $Name has $PetsCount+Words pets:
      $Pets...[$NL]

rule type(Dog) and attribute(Name)
    $Name, a $Age dog

rule type(Dog)
    A $Age dog

rule type(Cat)
    $Name, a $Age+Age kitty

rule trigger(Age) and attribute(this, 1)
    one year old

rule trigger(Age)
    $this+Words years old